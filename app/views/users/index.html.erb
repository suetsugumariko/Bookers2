<%= render 'books/info', user: @user, book: @book %>
 <div class='col-md-8 offset-md-1'>
      <h2>Users</h2>
      <table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>image</th>
      <th>name</th>
      <th colspan="3"></th>
    </tr>
  </thead>
   <tbody>
   <% @users.each do |user| %>
   <tr>
   <td>
   <%= image_tag book.user.get_profile_image(100,100) %>
   </td>
   <td>
    <%=link_to book.title, user_path(user.id) %>
   </td>
   <td>
    <%=user.body %>
   </td>
   </tr>
   <% end %>
  </tbody>
 </div>
